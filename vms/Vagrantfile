Vagrant.configure("2") do |config|
  config.vm.box = "debian/buster64"

  # master VM
  config.vm.define "master" do |master|
    master.vm.provider "virtualbox" do |vb|
      # vb.memory = "512"
      vb.name = "master"
    end
    master.vm.network "private_network", ip: "192.168.33.20"
    master.vm.hostname = "master"
    monitoring.vm.provision "shell", inline: <<-SHELL
      echo 'ssh-rsa ' >> /home/vagrant/.ssh/authorized_keys
    SHELL
  end

  # worker1 VM
  config.vm.define "worker1" do |worker1|
    worker1.vm.provider "virtualbox" do |vb|
      # vb.memory = "512"
      vb.name = "worker1"
    end
    worker1.vm.network "private_network", ip: "192.168.33.21"
    worker1.vm.hostname = "worker1"
    monitoring.vm.provision "shell", inline: <<-SHELL
      echo 'ssh-rsa ' >> /home/vagrant/.ssh/authorized_keys
    SHELL
  end

  

  # worker2 VM
  config.vm.define "worker2" do |worker2|
    worker2.vm.provider "virtualbox" do |vb|
      # vb.memory = "512"
      vb.name = "worker2"
    end
    worker2.vm.network "private_network", ip: "192.168.33.22"
    worker2.vm.hostname = "worker2"
    monitoring.vm.provision "shell", inline: <<-SHELL
      echo 'ssh-rsa ' >> /home/vagrant/.ssh/authorized_keys
    SHELL
  end
  



end
